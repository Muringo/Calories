<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rowLayout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="38dp"
            android:text="1"
            android:textSize="70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/day_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="60dp"
            android:text="Saturday :"
            app:layout_constraintStart_toEndOf="@+id/id_tv"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/food_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Milk ,"
            app:layout_constraintStart_toEndOf="@+id/id_tv"
            app:layout_constraintTop_toBottomOf="@+id/day_tv" />

        <TextView
            android:id="@+id/serving_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:text="2 ,"
            app:layout_constraintStart_toEndOf="@+id/food_tv"
            app:layout_constraintTop_toBottomOf="@+id/day_tv" />

        <TextView
            android:id="@+id/calories_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:text="300cal"
            app:layout_constraintStart_toEndOf="@+id/serving_tv"
            app:layout_constraintTop_toBottomOf="@+id/day_tv" />

        </androidx.constraintlayout.widget.ConstraintLayout>


</layout>